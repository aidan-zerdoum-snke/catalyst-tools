// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
    "name": "SnkeContainer",
    "securityOpt": [
        "seccomp=unconfined"
    ],
    "userEnvProbe": "loginShell",
    "containerEnv": {
        "DEVCONTAINER": "true",
        "TERM": "xterm-256color",
        "LANG": "${localEnv:LANG:en_US.UTF-8}",
        "TZ": "${localEnv:TZ:Europe/Berlin}"
    },
    "remoteUser": "snke",
    "updateRemoteUserUID": true,
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile"
    },
    "workspaceFolder": "/home/snke/workspace",
    "workspaceMount":"source=${localWorkspaceFolder},target=/home/snke/workspace,type=bind,consistency=cached",
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/snke/.ssh,type=bind,ro",
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/clearml.conf,target=/home/snke/clearml.conf,type=bind"
    ],
    "shutdownAction": "stopContainer",
    "waitFor": "postStartCommand",
    "runArgs": [
        "--gpus=all",
        "--ipc=host",
        "--rm"
    ],
    "customizations": {
        "vscode": {
          "extensions": [
            "ms-python.python",
            "ms-python.debugpy",
            "charliermarsh.ruff@2025.14.0",
            "ms-toolsai.datawrangler",
            "ms-toolsai.jupyter",
            "tamasfe.even-better-toml"
        ]
        }
    }
}
